<div class="container">
  <div class="row">
    <div class="col-xs-6 col-xs-offset-3">

      <h1 class="text-center"><%= @cocktail.name %></h1>


      <ul>
      <% @cocktail.doses.each do |dose| %>
        <li><%= dose.description %> of <%= dose.ingredient.name %> <%= link_to "Delete", dose_path(dose), method: :delete  %></li>
      <% end %>
      </ul>

      <div class="text-center">
        <%= link_to 'New Dose', new_cocktail_dose_path(@cocktail), class: 'btn btn-primary'  %>

        <%= link_to 'home', cocktails_path, class: "btn btn-primary"  %>
      </div>
    </div>
  </div>
</div>
