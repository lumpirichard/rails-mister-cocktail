<div class="container">
  <div class="row">
    <div class="col-xs-6 col-xs-offset-3">

      <h1 class="text-center">All Cocktails</h1>

        <hr>

        <div class="text-center">
          <%= link_to "New Cocktail", new_cocktail_path, class: "btn btn-primary"  %>
        </div>

        <hr>

          <% @cocktails.each do |cocktail| %>
          <p class="text-center">
            <%= link_to cocktail.name, cocktail_path(cocktail) %>
          </p>
        <% end %>

    </div>
  </div>
</div>
