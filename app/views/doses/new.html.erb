<div class="container">
  <div class="row">
    <div class="col-xs-6 col-xs-offset-3">


      <h1>Add Ingredient</h1>

      <%= simple_form_for [@cocktail, @dose] do |f| %>

        <%= f.error_notification %>

        <%= f.input :description %>
        <%= f.select :ingredient_id, options_from_collection_for_select(Ingredient.all, 'id', 'name') %>

        <%= f.button :submit %>

      <% end %>

    </div>
  </div>
</div>

